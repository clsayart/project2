<h2>Create a new friend</h2>

{{!-- action represents the ROUTE you wanna target --}}
<form method="post" action="/friends/new" class="form" >
    <label for="name">name</label>
    <input class="input" type="text" id="name" name="name" >
    <label for="occupation">occupation</label>
    <input id="occupation" class="input" type="text" name="occupation">
    <label for="age">age</label>
    <input class="input" type="number" id="age" name="age">
    <label for="select-pet">pet</label>
    <select id="select-pet" name="pet" class="input">
        {{#each pets}}
        <option value="{{this._id}}">{{this.nickname}}</option>
        {{/each}}
    </select>
    <button class="btn">ok !</button>
</form>