<h2>Edit the friend</h2>

<form method="post" action="/friends/edit/{{friend._id}}" class="form">
    <label for="name">name</label>
    <input class="input" type="text" id="name" name="name" value={{friend.name}} >
    <label for="occupation">occupation</label>
    <input id="occupation" class="input" type="text" name="occupation" value={{friend.occupation}}>
    <label for="age">catchPhrase</label>
    <input class="input" type="number" id="age" name="age">
     <select id="select-pet" name="pet" class="input">
        {{#each pets}}
        <option value="{{this._id}}">{{this.nickname}}</option>
        {{/each}}
    </select>
    <button class="btn">ok !</button>
</form>